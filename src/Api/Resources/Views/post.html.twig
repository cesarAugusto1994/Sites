{% extends 'template.html.twig' %}

{% block title %}{{ post.titulo|convert_encoding('UTF-8', 'iso-8859-1') }}{% endblock %}

{% block content %}

    <div class="blog-post">
        <h2 class="blog-post-title">{{ post.titulo|convert_encoding('UTF-8', 'iso-8859-1') }}</h2>
        <p class="blog-post-meta">{{ post.cadastro|date('F j, Y') }} by <a href="#">{{ post.usuario.nome }}</a></p>
        <p><i>{{ post.descricao|convert_encoding('UTF-8', 'iso-8859-1') }}</i></p>
    </div>

    <table class="table table-bordered table-responsive">
        <tbody>
        {% for link in links %}
            <tr>
                <td>
                    {% if link.media == 'audio' %}
                        <p class="lead">{{ link.titulo }}</p>
                        <iframe width="100%" height="166" scrolling="no" frameborder="no"
                                src="{{ link.url }}&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
                    {% else %}
                        <p class="lead"><a target="_blank" href="{{ link.url }}">{{ link.titulo }}</a></p>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td>Sem anexos.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

